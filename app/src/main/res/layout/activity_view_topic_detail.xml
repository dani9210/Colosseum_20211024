<?xml version="1.0" encoding="utf-8"?>

<layout>



    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ViewTopicDetailActivity">



        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="250dp">

            <ImageView
                android:id="@+id/topicImg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_launcher"
                android:scaleType="centerCrop"/>


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#80000000"/>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">



                <TextView
                    android:id="@+id/topicTitleTxt"
                    android:layout_gravity="center"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="토론 주제 자리"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_gravity="center">


                <TextView
                    android:id="@+id/firstSideTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="첫 진영"
                    android:textSize="17sp"
                    android:textColor="@color/white"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vs."
                    android:textSize="17sp"
                    android:textColor="@color/white"/>
                <TextView
                    android:id="@+id/SecondSideTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="둘째 진영"
                    android:textSize="17sp"
                    android:textColor="@color/white"/>



            </LinearLayout>



            </LinearLayout>




        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

              <ListView
                  android:id="@+id/replyListView"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"/>

            <Button
                android:id="@+id/addReplyBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="의견 등록 하기"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                android:layout_gravity="bottom|end"/>


        </FrameLayout>



    </LinearLayout>



</layout>

